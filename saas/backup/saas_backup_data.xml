RUN mkdir  /home/backup/.ssh/keys
RUN ln -s /opt/keys/authorized_keys /home/backup/.ssh/authorized_keys
RUN chmod -R 700 /home/backup/.ssh
RUN touch /home/backup/.hushlogin
RUN mkdir /opt/backup/simple


