RUN echo "" >> /etc/supervisor/conf.d/supervisord.conf
RUN echo "[program:cron]" >> /etc/supervisor/conf.d/supervisord.conf
RUN echo "command=cron -f" >> /etc/supervisor/conf.d/supervisord.conf

